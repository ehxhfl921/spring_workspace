<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c %M - %m%n" />
		</layout>
	</appender>
	
	
	<!-- 
		파일 로거
		FileLogger - 파일에 로그 메세지 출력
		RollingFileAppender - 로그의 크기가 지정된 용량보다 크면 다른 이름의 파일로 출력
		DailyRollingFileAppender
		날짜별로 파일에 로그 기록을 출력
		오늘 작성된 로그 : 파일 이름
		어제 작성된 로그 : 파일 이름.yyyy-MM-dd 형식으로 저장
	 -->	
	<appender name="fileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<!-- <param name="file" value="c:\\logs\\log4j.log" />   C:\logs-->
		<!-- D:\public\download\spring\sts-bundle\sts-3.9.18.RELEASE\logs -->
		<param name="file" value="./logs/log4j.log" />
		<!-- 이어 쓰기 -->
		<param name="Append" value="true" />
		<param name="DatePattern" value=".yyyyMMdd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %-5p: %F:%L - %m%n" />
		</layout>
	</appender>
	
	<!-- Application Loggers -->
	<logger name="net.koreate">
		<level value="info" />
		<appender-ref ref="console" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="info" />
		<appender-ref ref="fileAppender" />
	</root>
	
</log4j:configuration>
