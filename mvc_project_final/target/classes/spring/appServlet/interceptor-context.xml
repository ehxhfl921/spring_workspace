<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="login" class="net.koreate.common.interceptor.LoginInterceptor" />

	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/user/login"/>
			<ref bean="login"/>
		</mvc:interceptor>
		
		<mvc:interceptor>
			<mvc:mapping path="/"/>
			<mvc:exclude-mapping path="/user/*"/>
			<bean class="net.koreate.common.interceptor.checkCookieInterceptor"/>
		</mvc:interceptor>
		
		<mvc:interceptor>
			<mvc:mapping path="/user/logout"/>
			<bean class="net.koreate.common.interceptor.LogoutInterceptor" />
		</mvc:interceptor>
		
		<mvc:interceptor>
			<mvc:mapping path="/**"/>
			<bean class="net.koreate.common.interceptor.WeatherInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>	
</beans>
